<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="300">
        
        <OnClick
            motion:targetId="@+id/ram_card"
            motion:clickAction="toggle" />
            
        <OnClick
            motion:targetId="@+id/storage_card"
            motion:clickAction="toggle" />
            
        <OnClick
            motion:targetId="@+id/cpu_card"
            motion:clickAction="toggle" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/ram_card">
            <Transform
                android:scaleX="1.0"
                android:scaleY="1.0" />
        </Constraint>
        
        <Constraint android:id="@+id/storage_card">
            <Transform
                android:scaleX="1.0"
                android:scaleY="1.0" />
        </Constraint>
        
        <Constraint android:id="@+id/cpu_card">
            <Transform
                android:scaleX="1.0"
                android:scaleY="1.0" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/ram_card">
            <Transform
                android:scaleX="1.05"
                android:scaleY="1.05" />
        </Constraint>
        
        <Constraint android:id="@+id/storage_card">
            <Transform
                android:scaleX="1.05"
                android:scaleY="1.05" />
        </Constraint>
        
        <Constraint android:id="@+id/cpu_card">
            <Transform
                android:scaleX="1.05"
                android:scaleY="1.05" />
        </Constraint>
    </ConstraintSet>

</MotionScene>